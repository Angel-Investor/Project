<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
</head>

<body>
    <% include ../partials/nav %>
        <br>
        <div class="container-fluid">
            <div class="row">
                <div class="col-11">
                    <h3>
                        <%= title %>
                    </h3>
                </div>
                <div class="col-1">
                    <p>
                        <a href="/logout"><button type="button" class="btn btn-primary">Logout</button></a>
                    </p>
                </div>
            </div>
            <div class="row justify-content-center">
                <% include ../partials/messages %>
                    <br>
                    <div class="col-6">
                        <table class="table table-dark table-hover table-borderless">
                            <h4>Business Posts List</h4>
                            <thead>
                                <tr>
                                    <th class="col-md-1">Title</th>
                                    <th class="col-md-2">Email</th>
                                    <th class="col-md-5">Content</th>
                                    <th class="col-md-1">Options</th>
                                </tr>
                            </thead>
                            <% for(let count=0; count < businessResults.length; count++){%>
                                <tbody>
                                    <td>
                                        <%= businessResults[count].businessPostTitle%>
                                    </td>
                                    <td>
                                        <%= businessResults[count].businessPostEmail%>
                                    </td>
                                    <td>
                                        <%= businessResults[count].businessPostBody%>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/business/edit-business-post/<%= businessResults[count]._id%>"
                                                class="btn btn-info btn-sm" role="button">Edit</button></a>
                                            <a href="/business/delete-business-post/<%= businessResults[count]._id%>"
                                                class="btn btn-danger btn-sm" role="button">Delete</button></a>
                                        </div>
                                    </td>
                                </tbody>
                                <% } %>
                        </table>
                        <br>
                    </div>
                    <div class="col-6">
                        <table class="table table-dark table-hover table-borderless">
                            <h4>Investor Posts List</h4>
                            <thead>
                                <tr>
                                    <th class="col-md-1">Title</th>
                                    <th class="col-md-2">Email</th>
                                    <th class="col-md-5">Content</th>
                                    <th class="col-md-1">Options</th>
                                </tr>
                            </thead>
                            <% for(let count=0; count < investorResults.length; count++){%>
                                <tbody>
                                    <td>
                                        <%= investorResults[count].investorPostTitle%>
                                    </td>
                                    <td>
                                        <%= investorResults[count].investorPostEmail%>
                                    </td>
                                    <td>
                                        <%= investorResults[count].investorPostBody%>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/investor/edit-investor-post/<%= investorResults[count]._id%>"
                                                class="btn btn-info btn-sm" role="button">Edit</button></a>
                                            <a href="/investor/delete-investor-post/<%= investorResults[count]._id%>"
                                                class="btn btn-danger btn-sm" role="button">Delete</button></a>
                                        </div>
                                    </td>
                                </tbody>
                                <% } %>
                        </table>
                        <br>
                    </div>
            </div>
            <% include ../partials/footer %>
        </div>
</body>

</html>